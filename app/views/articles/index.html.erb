<h1>Articles</h1>
<div class="digg_pagination"><%= will_paginate %></div>
<div id="articles" class="container">
  <table class="table" style="width: 100%">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Body</th>
        <th scope="col">Action <%= link_to("New", { controller: :articles, action: :new }, { class: "btn btn-primary btn-success" })%></th>
      </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td>
          <div>
            <%= link_to "Show", article, { class: "btn btn-primary" } %>
            <%= link_to "Edit", edit_article_path(article), { class: "btn btn-warning" } %>
            <%= link_to "Delete", article, { class: "btn btn-danger", method: :delete } if can?(:destroy, article) %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="digg_pagination"><%= will_paginate %></div>
