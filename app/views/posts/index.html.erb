<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <table>
    <thead>
      <th>id</th>
      <th>title</th>
      <th>content</th>
      <th>post type</th>
      <th>action</th>
    </thead>
    <tbody style="border: 1px solid black; color: black">
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%=h post.title %></td>
          <td><%=h post.content %></td>
          <td><%=h post.post_type&.name %></td>
          <td><%= link_to "Show", post %> | <%= link_to "Edit", edit_post_path(post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New post", new_post_path %>
